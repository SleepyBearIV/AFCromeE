{
  "manifest_version": 3,
  "name": "AF Queue Monitor - Exakt kötid för Arbetsförmedlingen",
  "version": "0.5.0",
  "description": "Visar exakt väntetid i minuter istället för bara 'lång kötid' på Arbetsförmedlingens kontaktsida. Sparar din tid med exakta kötider!",
  "author": "AF Queue Monitor Team",
  "permissions": [],
  "host_permissions": [
    "*://arbetsformedlingen.se/*",
    "*://*.arbetsformedlingen.se/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-hook.js"],
      "matches": ["*://arbetsformedlingen.se/*", "*://*.arbetsformedlingen.se/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://arbetsformedlingen.se/kontakt*",
        "*://arbetsformedlingen.se/kontakt/for-arbetssokande*",
        "*://*.arbetsformedlingen.se/kontakt*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AF Queue Monitor - Se exakta kötider",
    "default_icon": {
      "16": "icons/AF_BEAR.png",
      "48": "icons/AF_BEAR.png",
      "128": "icons/AF_BEAR.png"
    }
  },
  "icons": {
    "16": "icons/AF_BEAR.png",
    "48": "icons/AF_BEAR.png",
    "128": "icons/AF_BEAR.png"
  }
}